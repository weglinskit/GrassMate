---
import AuthLayout from "../layouts/AuthLayout.astro";
import { LoginForm } from "../components/auth/LoginForm";
---

<AuthLayout title="Logowanie – GrassMate">
  <div slot="header-actions">
    <a
      href="/rejestracja"
      class="text-sm font-medium text-muted-foreground transition-colors hover:text-foreground"
    >
      Nie masz konta? Zarejestruj się
    </a>
  </div>

  <div class="mx-auto max-w-md">
    <section
      class="rounded-xl border bg-card py-6 shadow-sm"
      aria-labelledby="login-heading"
    >
      <div class="px-6 pb-4">
        <h1 id="login-heading" class="text-xl font-semibold text-card-foreground">
          Logowanie
        </h1>
        <p class="mt-1 text-sm text-muted-foreground">
          Zaloguj się, aby zarządzać zabiegami trawnika.
        </p>
      </div>
      <div class="px-6">
        <LoginForm
          client:load
          returnUrl={Astro.url.searchParams.get("returnUrl") ?? undefined}
        />
      </div>
    </section>
  </div>
</AuthLayout>
